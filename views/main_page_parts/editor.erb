                <input type="button" value="UPPDATERA" onclick="updateTextEditor('project', 'ta_project')">
            </div>

            <textarea name="textarea" id="ta_project" rows="20"><%=get_site_text("project")%></textarea>
        </div>

        <div id="area_kontakt" class="area_content_editor">
            <h1>Kontakt</h1>
            <p>H채r kan du redigera sidan 'Kontakt'</p>
            <div class="editor_action_bar">
                <input type="button" value="SPARA" onclick="saveSiteInfo('contact', 'ta_contact')">
                <input type="button" value="UPPDATERA" onclick="updateTextEditor('contact', 'ta_contact')">
            </div>

            <textarea name="textarea" id="ta_contact" rows="20"><%=get_site_text("contact")%></textarea>
        </div>
    </div>
</div>